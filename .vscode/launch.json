{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "cppdbg",
            "request": "launch",
            "name": "Run VLC server",
            "program": "${workspaceFolder}/vlc/server/build/bin/vlc_status_server.exe",
            "args": ["--debug"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {"name": "PATH", "value": "C:\\Program Files\\VideoLAN\\VLC;${env:PATH}"},
                {"name": "VLC_NO_STATUS_LOG", "value": "1"}
            ],
            "externalConsole": false,
            "preLaunchTask": "cmake build",
            "MIMode": "gdb",
            "miDebuggerArgs": "-q",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Handle SIGTRAP signals from system DLLs",
                    "text": "handle SIGTRAP noprint nostop",
                }
            ]
        },
        {
            "type": "cppdbg",
            "request": "launch",
            "name": "Run server",
            "program": "${workspaceFolder}/zig-out/bin/zig_vorne_m1000",
            // "args": ["--bluray"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "preLaunchTask": "zig build",
            "MIMode": "gdb",
            // "miDebuggerPath": "${workspaceFolder}/gdbroot.sh",
            "miDebuggerArgs": "-q",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set new-console off",
                    "text": "set new-console off",
                    "ignoreFailures": true
                },
                {
                    "description": "Set pagination off",
                    "text": "set pagination off",
                    "ignoreFailures": true
                },
                {
                    "description": "Force target architecture for debuggee (MI-style)",
                    "text": "-gdb-set architecture aarch64",
                    "ignoreFailures": true
                }
            ]
        },
