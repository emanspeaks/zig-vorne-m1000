{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "zig build",
			"command": "zig",
			"args": ["build"],
			"group": "build",
			"isBackground": false,
			"problemMatcher": [
				{
					"base": "$zig",
					"fileLocation": "autoDetect"
				}
			]
		},
		{
			"type": "shell",
			"label": "cmake configure",
			"command": "cmake",
			"args": ["--preset", "windows-x64"],
			"options": {
				"cwd": "${workspaceFolder}/vlc/server"
			},
			"group": "build",
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "cmake build",
			"command": "cmake",
			"args": ["--build", "--preset", "windows-x64"],
			"options": {
				"cwd": "${workspaceFolder}/vlc/server"
			},
			"group": "build",
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"type": "shell",
			"label": "clean build",
			"command": "cmd",
			"args": ["/c", "if exist build rmdir /s /q build"],
			"options": {
				"cwd": "${workspaceFolder}/vlc/server"
			},
			"group": "build",
			"problemMatcher": []
		}
	]
}
